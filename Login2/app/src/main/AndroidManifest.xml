<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.forte.login"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
        <activity
            android:name="com.forte.login.TreeActivity"
            android:label="@string/title_activity_tree" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.forte.login.FragmentActivity"
            android:label="@string/title_activity_fragment" >
        </activity>
        <activity android:name="com.forte.login.FragmentActivity$DetailsActivity" />
        <activity
            android:name="com.forte.login.FragmentItemActivity"
            android:label="@string/title_activity_fragment_item" >
        </activity>
    </application>

</manifest>